<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/panorama_shop.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/panorama_shop.js" />
	</scripts>
	<snippets>
		<snippet name="SmallItem">
			<Panel class="SmallItemPanel" draggable="true">
				<Button id="SmallItemButton">
					<DOTAItemImage hittest="false" id="SmallItemImage" />
					<Label hittest="false" id="SmallItemStock"/>
					<Label hittest="false" id="StockTimer" />
					<Panel hittest="false" id="StockOverlay" />
				</Button>
			</Panel>
		</snippet>
	</snippets>
	<Panel hittest="false" class="base">
		<Panel hittest="true" onmouseactivate="" acceptfocus="true" onfocus="DropInputFocus()" oncancel="OpenCloseShop(false)" id="ShopBase">
			<Panel id="ShopItemBasePanel">
				<Panel id="ShopItemList">
					<Panel id="ShopSearch">
						<!-- <Button id="ShowHideItemguidesButton" hittest="true" onactivate="$.GetContextPanel().ToggleClass('ItembuildsHidden');">
							<Panel id="ShowHideItemguidesIcon" hittest="false" />
						</Button> -->
						<TextEntry id="ShopSearchEntry" oncancel="ClearSearch()" oninputsubmit="DropInputFocus()" placeholder="#panorama_shop_search_placeholder"/>
					</Panel>
					<Panel id="ShopTabs" />
					<Panel id="ShopItems">
						<Panel id="ShopItemsBase" />
						<Panel id="ShopSearchOverlay" />
					</Panel>
				</Panel>
				<Panel id="ItemRecipeBox">
					<Panel id="ItemRecipeBoxRows">
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow1" />
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow2" />
						<Panel class="ItemRecipeBoxRow" id="ItemRecipeBoxRow3" />
					</Panel>
					<Panel hittest="false" id="ItemRecipeBoxDrops">
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_freya" src="file://{images}/heroes/npc_arena_hero_freya.png" style="position: 59px 40px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_zaken" src="file://{images}/heroes/npc_arena_hero_zaken.png" style="position: 194px 40px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l1_v1" src="file://{images}/custom_game/units/npc_arena_boss_l1_v1.png" style="position: 1px 80px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l1_v2" src="file://{images}/custom_game/units/npc_arena_boss_l1_v2.png" style="position: 64px 80px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_central" src="file://{images}/custom_game/units/npc_arena_boss_central.png" style="position: 128px 80px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l2_v1" src="file://{images}/custom_game/units/npc_arena_boss_l2_v1.png" style="position: 190px 80px 0;"/>
						<Image class="UnitItemlikeRecipePanel" id="ItemRecipeBoxDrops_npc_arena_boss_l2_v2" src="file://{images}/custom_game/units/npc_arena_boss_l2_v2.png" style="position: 251px 80px 0;"/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel hittest="true" onmouseactivate="" id="QuickBuyPanel">
			<Panel class="DropDownValidTarget" hittest="false" />
			<Panel id="QuickBuyPanelItems" />
			<Image id="QuickBuyClearButtonPanel" onactivate="ClearQuickbuyItems()"/>
			<Panel id="QuickBuyStickyButtonPanel" />
		</Panel>
	</Panel>
</root>
